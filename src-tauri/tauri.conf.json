{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "SpeedSketch",
    "version": "2.0.0",
    "identifier": "com.avapun.speed-sketch",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../build"
    },
    "app": {
        "windows": [
            {
                "title": "SpeedSketch",
                "width": 800,
                "height": 600,
                "visible": true,
                "zoomHotkeysEnabled": false
            }
        ],
        "security": {
            "assetProtocol": {
                "enable": true,
                "scope": ["$APPCACHE/**", "$RESOURCE/**", "$HOME/**"]
            },
            "csp": {
                "default-src": "'self' customprotocol: asset:",
                "img-src": "'self' asset: http://asset.localhost"
            }
        }
    },
    "bundle": {
        "active": true,
        "category": "GraphicsAndDesign",
        "publisher": "Ava Pun",
        "copyright": "Â© 2025 Ava Pun",
        "homepage": "https://github.com/AvaLovelace1/speed-sketch",
        "targets": "all",
        "icon": [
            "icons/icon.icns",
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.ico"
        ]
    }
}
